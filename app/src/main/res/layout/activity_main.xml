<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#C5C8C9"
    >

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:hint="0"
        android:lineSpacingExtra="34sp"
        android:textAllCaps="true"
        android:textColor="#0C0C0C"
        android:textSize="34sp"
        android:textStyle="bold">

    </TextView>

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3EFEF"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">


            <Button
                android:id="@+id/Clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/border"
                android:text="Clear"
                android:textColor="#FF5722"
                android:textSize="20dp">

            </Button>

            <Button
                android:id="@+id/modules"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:text="%"
                android:textColor="#FF5722"
                android:textSize="25dp"></Button>

            <Button
                android:id="@+id/dev"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:text="/"
                android:textColor="#FF5722"
                android:textSize="35dp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@color/white">

            <Button
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_number"
                android:text="7"
                android:textSize="25dp"></Button>

            <Button
                android:id="@+id/eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_number"
                android:text="8"
                android:textSize="25dp"></Button>

            <Button
                android:id="@+id/nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_number"
                android:text="9"
                android:textSize="25dp"></Button>

            <Button
                android:id="@+id/multiply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:text="*"
                android:textColor="#FF5722"
                android:textSize="50dp"></Button>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@color/white">

            <Button
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_number"
                android:text="4"
                android:textSize="25dp"></Button>

            <Button
                android:id="@+id/five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_number"
                android:text="5"
                android:textSize="25dp"></Button>

            <Button
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_number"
                android:text="6"
                android:textSize="25dp"></Button>

            <Button
                android:id="@+id/minus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:text="-"
                android:textColor="#FF5722"
                android:textSize="55dp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@color/white">

            <Button
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_number"
                android:text="1"
                android:textSize="25dp"></Button>

            <Button
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_number"
                android:text="2"
                android:textSize="25dp"></Button>

            <Button
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_number"
                android:text="3"
                android:textSize="25dp"></Button>

            <Button
                android:id="@+id/plus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:text="+"
                android:textColor="#FF5722"
                android:textSize="50dp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@color/white">

            <Button
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/border"
                android:text="0"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/dot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:text="."
                android:textColor="#FF5722"
                android:textSize="45dp"></Button>

            <Button
                android:id="@+id/equal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/equal_button"
                android:text="="
                android:textColor="@color/white"
                android:textSize="50dp"></Button>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
